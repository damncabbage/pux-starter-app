{
  "name": "purescript-starter-app",
  "version": "4.0.0",
  "description": "Starter Pux application using webpack with hot-reloading.",
  "main": "src/js/index.js",
  "keywords": [
    "pux",
    "purescript-pux",
    "boilerplate",
    "starter-app"
  ],
  "scripts": {
    "postinstall": "./node_modules/.bin/bower cache clean && ./node_modules/.bin/bower install",
    "clean": "rimraf dist && rimraf output",
    "build": "npm run clean && set NODE_ENV=production && ./node_modules/.bin/webpack --config ./webpack.production.config.js --progress --profile --colors",
    "build:ide": "pulp build --src-path src/purs --no-psa --json-errors",
    "build:watch": "pulp -w build --src-path src/purs",
    "serve": "./node_modules/.bin/webpack-dev-server --hot --config webpack.config.js --inline --progress --profile --colors --display-error-details --display-cached --content-base src/",
    "serve:watch": "npm run serve --  --watch",
    "serve:prod": "http-server dist --cors -p 3000",
    "start": "npm run serve:watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/alexmingoia/pux-starter-app.git"
  },
  "author": "Alexander C. Mingoia",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/alexmingoia/pux-starter-app/issues"
  },
  "dependencies": {
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "purescript": "^0.8.3"
  },
  "devDependencies": {
    "bower": "^1.7.7",
    "html-webpack-plugin": "^2.14.0",
    "http-server": "^0.9.0",
    "purescript-psa": "^0.3.5",
    "purescript-webpack-plugin": "^0.2.0",
    "purs-loader": "^0.6.0",
    "rimraf": "^2.5.2",
    "source-map-loader": "^0.1.5",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  }
}
